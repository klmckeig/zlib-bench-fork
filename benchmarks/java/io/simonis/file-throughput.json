{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "title": {
    "text" : "__TITLE__",
    "anchor": "middle",
    "offset": 20
  },
  "data": {
    "values" : [
        __DATA__
    ]
  },
  "transform": [
    {
      "filter": "datum.type == 'isal' ? datum.level == __ISAL_LEVEL__ : datum.level == __DEFAULT_LEVEL__"
    },
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "throughput",
          "as": "throughput_mean"
        }
      ],
      "groupby": ["type", "file"]
    },
    {
      "lookup": "type",
      "from": {
        "data": {
          "values": [
            __TYPE_MAP__
          ]
        },
        "key": "type",
        "fields": ["new-type"]
      }
    },
    {
      "lookup": "file",
      "from": {
        "data": {
          "values": [
             __DEFAULT_DATA__
          ]
        },
        "key": "file",
        "fields": ["default_val"]
      }
    },
    {
      "calculate": "datum.throughput_mean/datum.default_val",
      "as" : "default-val"
    }
  ],
  "facet": {
    "row": {
      "field": "file",
      "type": "nominal",
      "title": "",
      "header": {
        "labelAngle": 270,
        "labelAlign": "center",
        "labelAnchor": "middle"
      },
	"sort": [
          __ROW_ORDER__
        ]
    }
  },
  "spec": {
    "height": 60,
    "encoding": {
      "x": {
        "field": "throughput_mean",
        "type": "quantitative",
        "axis": {
          "title": "Throughput (kb/ms)",
          "grid": true
        }
      },
      "y": {
        "field": "new-type",
        "type": "nominal",
        "axis": {
          "labels": false,
          "ticks":false,
          "domainWidth": 0,
          "title": ""
        },
        "sort" : [
          __LABEL_ORDER__
        ]
      }
    },
    "layer": [{
      "mark": "bar",
	    "encoding": {
        "color": {
          "field": "new-type",
          "type": "nominal",
          "legend": {
            "title" : "",
            "offset" : __LABEL_OFFSET__,
            "zindex": 1
          },
          "sort" : [
            __LABEL_ORDER__
          ]
        }
	    }
    }, {
      "mark": {
        "type": "text",
        "dx": 5,
        "angle": 0,
        "baseline": "middle",
        "align": "left"	  
      },
      "encoding": {
        "text": {
          "field": "default-val",
          "type": "nominal",
          "format": ".0%"
        }
      }	
    }]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"domainWidth": 1}
  }
}
